<?xml version="1.0"?>
<launch>

  <arg name="use_kalibr" default="false" />
  <arg name="use_cloudmerge" default="false" />
  <!-- Load calibration results -->
  <include file="$(find opt_calibration)/launch/opt_calibration_results.launch"/>
  
  <!-- Launch object detection node -->
  <node pkg="recognition" type="join_pointclouds"
        name="join_pointcloud" output="screen" respawn="false">
    <param name="use_kalibr" value="$(arg use_kalibr)" />
    <param name="use_cloudmerge" value="$(arg use_cloudmerge)" />
    <rosparam file="$(find recognition)/cfg/Clouds.yaml" command="load"/>
  </node>

</launch>
